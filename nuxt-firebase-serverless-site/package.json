{
    "name": "tb_qm",
    "version": "1.1.0",
    "description": "TrucksBook Queue Manager",
    "author": {
        "name": "Pierre-Yves Gauthier",
        "email": "p.yves.gauthier@gmail.com",
        "url": "https://kiwik.app"
    },
    "contributors": [
        {
            "name": "Pierre-Yves Gauthier",
            "email": "p.yves.gauthier@gmail.com"
        }
    ],
    "private": true,
    "engines": {
        "node": ">12.0.0"
    },
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "start": "nuxt start",
        "lint": "yarn run lint:js && yarn run lint:scss",
        "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
        "lint:scss": "stylelint '**/*.{vue,scss}'",
        "build:firebase": "yarn clean && yarn build && yarn copy && cd \"functions\" && yarn",
        "clean": "yarn clean:public && yarn clean:functions && yarn clean:static",
        "clean:functions": "rimraf \"functions/node_modules\" && rimraf \"functions/.nuxt\"",
        "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
        "clean:static": "rimraf \"src/static/sw.js\"",
        "copy": "yarn copy:nuxt && yarn copy:static",
        "copy:nuxt": "xcopy \"functions\\.nuxt\\dist\\*\" \"public\\_nuxt\\\" /E /Y",
        "copy:static": "xcopy \"src\\static\\*\" \"public\\\" /E /Y",
        "start:firebase": "firebase serve --only functions,hosting",
        "deploy": "firebase deploy --only functions,hosting",
        "deploy:dev": "caprover deploy --default"
    },
    "dependencies": {
        "@fortawesome/fontawesome": "^1.1.8",
        "@fortawesome/fontawesome-free-brands": "^5.0.13",
        "@fortawesome/fontawesome-free-solid": "^5.0.13",
        "@fortawesome/fontawesome-svg-core": "^1.2.27",
        "@fortawesome/free-regular-svg-icons": "^5.12.1",
        "@fortawesome/free-solid-svg-icons": "^5.12.1",
        "@fortawesome/vue-fontawesome": "^0.1.9",
        "@nuxtjs/axios": "^5.9.5",
        "@nuxtjs/dotenv": "^1.3.0",
        "@nuxtjs/firebase": "^7.1.1",
        "@nuxtjs/moment": "^1.6.0",
        "@nuxtjs/onesignal": "^3.0.0-beta.16",
        "@nuxtjs/pwa": "^3.1.2",
        "@nuxtjs/sentry": "^3.3.1",
        "@nuxtjs/style-resources": "^1.0.0",
        "@nuxtjs/svg": "^0.1.6",
        "add": "^2.0.6",
        "cookie-universal-nuxt": "^2.1.4",
        "element-ui": "^2.13.0",
        "firebase-messaging": "^1.0.6",
        "jspdf": "^1.5.3",
        "node-sass": "^4.14.1",
        "nuxt": "^2.12.0",
        "nuxt-fontawesome": "^0.4.0",
        "nuxt-i18n": "^6.6.1",
        "nuxt-start": "^2.12.0",
        "sass-loader": "^8.0.2",
        "yarn": "^1.22.10"
    },
    "devDependencies": {
        "@nuxtjs/eslint-config": "^1.0.1",
        "@nuxtjs/eslint-module": "^1.0.0",
        "@nuxtjs/router": "^1.5.0",
        "@nuxtjs/stylelint-module": "^3.2.2",
        "babel-eslint": "^10.1.0",
        "cookieparser": "^0.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-nuxt": "^0.5.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
        "firebase": "^8.2.1",
        "js-cookie": "^2.2.1",
        "jwt-decode": "^2.2.0",
        "nuxt-svg-loader": "^1.2.0",
        "prettier": "^1.16.4",
        "stylelint": "^13.8.0",
        "stylelint-order": "^3.1.1",
        "vue-svg-inline-loader": "^1.5.0",
        "vue-svg-loader": "^0.15.0"
    }
}
